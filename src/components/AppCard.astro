---
// src/components/AppCard.astro
const { href, title, description } = Astro.props;
---
<a href={href} target="_blank" class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 backdrop-blur-sm transition-all duration-300 hover:border-teal-400 hover:scale-105 block">
    <h4 class="font-bold text-teal-400 text-lg mb-2">{title}</h4>
    <p class="text-slate-400">{description}</p>
</a>